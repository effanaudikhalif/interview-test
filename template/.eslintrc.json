{
  "root": true,
  "env": {
    "es2022": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "parser": "@typescript-eslint/parser",
  "plugins": ["unused-imports", "@typescript-eslint"],
  "extends": ["eslint:recommended", "plugin:import/recommended", "plugin:import/typescript", "prettier", "plugin:@typescript-eslint/recommended"],
  "rules": {
    "unused-imports/no-unused-imports": "error",
    "import/order": ["error", {"alphabetize": {"order": "asc"}}]
  }
} 